<style>
    h1 {
      text-align: center;
      margin-bottom: 30px;
    }
    .btn-primary {
      width: 100%;
    }
    .password-match-error {
      color: red;
      margin-top: 5px;
    }
</style>
  <div class="container col-md-3">
    <h1 class="text-lavender">Đổi mật khẩu</h1>
    <form id="password-form" method="post" action="/auth/changepassword?_method=PUT">
      <div class="form-group">
        <input type="password" class="form-control" name="passwordold" id="current-password"placeholder="Nhập mật khẩu hiện tại" required>
        <p class="text-danger">{{errorP}}</p>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" name="passwordnew" id="new-password" placeholder="Nhập mật khẩu mới" required>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" id="confirm-password" placeholder="Nhập lại mật khẩu mới" required>
        <div id="password-match-error" class="password-match-error"></div>
      </div>
      <button type="submit" class="btn btn-primary">Đổi mật khẩu</button>
    </form>
  </div>
<script>
 const pwf = document.getElementById("password-form")
 pwf.addEventListener("submit", function(event) {
      event.preventDefault();
      var newPassword = document.getElementById("new-password").value;
      var confirmPassword = document.getElementById("confirm-password").value;
      
      var errorElement = document.getElementById("password-match-error");

      if (newPassword !== confirmPassword) {
        errorElement.textContent = "Mật khẩu mới và xác nhận mật khẩu không khớp.";
        document.getElementById("password-form").reset();
      } else {
        errorElement.textContent = "";
        pwf.submit();
        document.getElementById("password-form").reset();
      }
    });
</script>